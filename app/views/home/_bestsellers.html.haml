.row
  - @bestsellers.each do |bestseller|
    .col-sm-6.col-md-3
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          %img.img-shadow.general-thumbnail-img{src: bestseller.cover_url, alt: 'Some Cool Book'}
          .thumb-hover
            .general-thumb-link-wrap
              = link_to bestseller, class: 'thumb-hover-link' do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': 'true'}
              = link_to order_items_path(book_id: bestseller), method: :post, class: 'thumb-hover-link', remote: true do
                %i.fa.fa-shopping-cart.thumb-icon
      .mb-35
        .clearfix
          %p.pull-right.font-16.in-gold-500= number_to_euro(bestseller.price)
          %p.title.mr-55= bestseller.title
        %span.divider-sm
        %p.lead.small= book_authors(bestseller)