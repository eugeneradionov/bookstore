.hidden-xs.hidden-sm
  .row
    .col-md-5
      %h3.general-subtitle.mt-0 Billing Address
    .col-md-5.col-md-offset-2
      %h3.general-subtitle.mt-0 Shipping Address
= form_for @settings do |f|
  .row
    .col-md-5.mb-40
      .visible-xs.visible-sm
        %h3.general-subtitle.mt-0 Billing Address
      = render 'billing_address_form', f: f
    .col-md-5.col-md-offset-2.mb-25
      .visible-xs.visible-sm
        %h3.general-subtitle.mt-0 Shipping Address
      = render 'shipping_address_form', f: f
  .text-center
    = f.submit('Save', class: 'btn btn-default', name: 'save_address_button')