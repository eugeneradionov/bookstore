.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      %img.img-shadow.general-thumbnail-img{src: book.cover_url}
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': 'true'}
          = link_to order_items_path(book_id: book), method: :post, class: 'thumb-hover-link', remote: true do
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    .space-between
      %p.title= book.title
      %p.font-16.in-gold-500= number_to_euro(book.price)
    %span.divider-sm
    %p.lead.small= book.authors.map(&:name).join(', ')