%a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  All
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li= link_to books_path, 'All', class: 'filter-link'
  - @categories_and_count.each do |category|
    %li
      = link_to "#{category['name']}", books_path(category: category['name'], sort: params[:sort], direction: params[:direction])
