%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, html: {class: 'general-form'}, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-group.mb-30
      = f.label :email, class: 'control-label input-label'
      = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', placeholder: 'Enter Email'
    .form-group.mb-30
      = f.label :password, class: 'control-label input-label'
      = f.password_field :password, autocomplete: 'off', id: 'password', class: 'form-control', placeholder: 'Password'
    .form-group.mb-30
      = f.label :confirm_password, class: 'control-label input-label'
      = f.password_field :password_confirmation, autocomplete: 'off', id: 'confirm', class: 'form-control', placeholder: 'Confirm Password'
    .text-center
      = f.submit 'Sign up', class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Have an Account?
    - if controller_name != 'sessions'
      = link_to "Log in", new_session_path(resource_name), class: 'in-gold-500'
