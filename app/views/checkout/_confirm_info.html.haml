.row.mb-20
  .col-sm-3
    %h3.general-subtitle Shipping Address
    %p.general-address
      = shipping_full_name
      = link_to 'edit', checkout_path(current_step: 'address'), class: 'general-edit'
      %br
      = shipping_address
      %br
      = shipping_city_zip
      %br
      = shipping_country
      %br
      = shipping_phone
  .col-sm-3
    %h3.general-subtitle Billing Address
    %p.general-address
      = billing_full_name
      = link_to 'edit', checkout_path(current_step: 'address'), class: 'general-edit'
      %br
      = billing_address
      %br
      = billing_city_zip
      %br
      = billing_country
      %br
      = billing_phone
  .col-sm-3
    %h3.general-subtitle Shipments
    %p.general-address
      = @checkout.delivery.method
      = link_to 'edit', checkout_path(current_step: 'delivery'), class: 'general-edit'
  .col-sm-3
    %h3.general-subtitle Payment Information
    %p.general-address
      = card_number
      = link_to 'edit', checkout_path(current_step: 'payment'), class: 'general-edit'
      %br
      = mm_yy