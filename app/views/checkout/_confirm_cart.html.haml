.visible-xs
  - @order_cart.order_items.each do |order_item|
    .general-cart-item.divider-lg
      .general-img-wrap-table
        %img.cart-img-shadow{src: order_item.book.cover_url, alt: 'Some cool book'}
      %p.title= order_item.book.title
      %p.in-grey-600.fw-300= book_first_sentence(order_item.book)
      %table.table
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500= number_to_euro(order_item.book.price)
        %tr
          %td.vertical-middle
            %span.in-grey-600 Quantity
          %td
            %span= order_item.quantity
        %tr
          %td
            %span.in-grey-600 SubTotal
          %td
            %span.font-16.in-gold-500= number_to_euro(order_item.subtotal_price)
.hidden-xs.divider-lg.pt-20
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600 Book
        %th.col-method
        %th
          %span.in-grey-600 Price
        %th
          %span.in-grey-600 Quantity
        %th
          %span.in-grey-600 Total
    %tbody
      - @order_cart.order_items.each do |order_item|
        %tr
          %td
            .general-img-wrap-table
              %img.cart-img-shadow.pull-left{src: order_item.book.cover_url, alt: 'Some cool book'}
          %td
            %p.title= order_item.book.title
            %p.in-grey-600.fw-300= book_first_sentence(order_item.book)
          %td
            %span.font-16.in-gold-500= number_to_euro(order_item.book.price)
          %td
            %span.ml-30= order_item.quantity
          %td
            %span.font-16.in-gold-500= number_to_euro(order_item.subtotal_price)